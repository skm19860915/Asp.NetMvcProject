@model Address

@{
    Layout = "~/Views/Account/_MyAccountLayout.cshtml";
}

<div class="well well-sm section-title">
    @Html.GlobalResource("AddressInformation")
</div>
@Html.LocalizedValidationSummary()
@using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "Form_EditAddress" }))
{
    <div class="form-horizontal">
        @Html.Partial("AddressEditor", Model)
    </div>
    @Html.Hidden("Address", Model.ID)
    <div class="form-group">
        <input type="submit" class="btn btn-default" value="@Html.GlobalResource("Save")" /> 
        @Html.ActionLink(Html.GlobalResource("Cancel"), MVC.AddressManagementAction, new { @class = "btn btn-link" })
    </div>
}
