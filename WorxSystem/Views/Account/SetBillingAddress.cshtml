@model List<Address>

@{
    Layout = "~/Views/Account/_MyAccountLayout.cshtml";
}

<div class="well well-sm section-title">
    @Html.GlobalResource("SetBillingAddress")
</div>
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.Partial("AddressSelector", Model)
        @Html.Hidden("InvoiceID", ViewData[Fields.InvoiceID])
        <input type="submit" class="btn btn-default" value="@Html.GlobalResource("Select")" />
        @Html.ActionLink(Html.GlobalResource("NewAddress"), MVC.CreateAddressAction, null, new { SetBillingAddress = ViewData[Fields.InvoiceID] }, new { @class = "btn btn-link" })
    </div>
}
