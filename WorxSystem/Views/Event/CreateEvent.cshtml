                                                    }
                                                </td>
                                                <td>
                                                    @Html.TextBox(incrementKey, increments[i], new { @class = "form-control" })

                                                </td>
                                                <td>
                                                    @if (!isFirstIncrement)
                                                    {
                                                        <button class="close deleteIncrement"><span class="glyphicon glyphicon-remove"></span></button>
                                                    }
                                                </td>
                                            </tr>
                                            if (tierInputIndex <= i)
                                            {
                                                tierInputIndex = i + 1;
                                            }
                                            isFirstIncrement = false;
                                        }
                                        @if (isFirstIncrement)
                                        {
                                            <tr>
